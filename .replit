mode = "parallel"
author = 35089257

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Reptileglobal/backend && node server.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Reptileglobal/frontend && npm run dev"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
